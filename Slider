<script>
const pp=document.getElementById('pp'),sp=document.getElementById('sp'),cs=document.getElementById('cs'),cv=document.getElementById('cv'),ma=document.getElementById('ma'),mk=document.getElementById('mk'),la=document.getElementById('la'),lk=document.getElementById('lk'),fa=document.getElementById('fa'),fp=document.getElementById('fp');
function fmt(v){return'$'+v.toLocaleString('en-US',{minimumFractionDigits:0,maximumFractionDigits:0})}
function calc(){const p=parseFloat(pp.value)||0,s=parseFloat(sp.value)||0,c=parseFloat(cs.value)/100;cv.textContent=Math.round(c*100)+'%';const t=s-p,l=t*c,ls=p+l,f=t-l,fp_val=t>0?(f/t*100):0;ma.textContent=fmt(s);mk.textContent=fmt(t);la.textContent=fmt(ls);lk.textContent=fmt(l);fa.textContent=fmt(f);fp.textContent=fp_val.toFixed(1)+'% of appreciation'}
pp.addEventListener('input',calc);sp.addEventListener('input',calc);cs.addEventListener('input',calc);calc();
</script>
